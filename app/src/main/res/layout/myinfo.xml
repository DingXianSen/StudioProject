<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#029bfe"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="houTui"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/jiantou" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:text="我的信息"
            android:textColor="#fff"
            android:textSize="30sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rstyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="头像"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/jiantous"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="tuku"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/jiantous" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/jiantous"
            android:src="@mipmap/imag" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/xiugai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="houTui"
        android:background="@drawable/rstyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/jiantou"
            android:text="中"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/jiantou"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/jiantous"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:onClick="onClick"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>