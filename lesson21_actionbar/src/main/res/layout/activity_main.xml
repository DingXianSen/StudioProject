<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lesson21_actionbar.MainActivity">

    <CheckBox
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐藏ActivityBar" />

    <CheckBox
        android:id="@+id/display_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐藏HOME" />

    <CheckBox
        android:id="@+id/display_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐藏Title" />

    <CheckBox
        android:id="@+id/set_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置Title" />

    <CheckBox
        android:id="@+id/set_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置子Title" />

    <CheckBox
        android:id="@+id/set_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置Logo" />

    <CheckBox
        android:id="@+id/set_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置Icon" />

    <CheckBox
        android:id="@+id/as_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作为up" />
</LinearLayout>
